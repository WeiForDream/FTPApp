<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <org.weiwei.ui.view.PathBar
        android:id="@+id/id_fragment_file_list_path_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.weiwei.ui.view.PathBar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/id_fragment_file_list_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/click_background" >
        </ListView>

        <org.weiwei.ui.view.EmptyLinearLayout
            android:id="@+id/id_empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </org.weiwei.ui.view.EmptyLinearLayout>
        

    </FrameLayout>

</LinearLayout>