<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:descendantFocusability= "blocksDescendants" >

    <ImageView
        android:id="@+id/id_listitem_fragment_video_music_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_easytransfer_music" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/id_listitem_fragment_video_music_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_listitem_fragment_video_music_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="@string/music" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_listitem_fragment_video_music_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music" />

            <TextView
                android:id="@+id/id_listitem_fragment_video_music_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/music" />
        </LinearLayout>
    </LinearLayout>
    
    <Button 
        android:id="@+id/id_listitem_sent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_send_click"
        android:text="发送"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:focusable = "false"
        android:layout_marginRight="15dp">
    </Button>

</RelativeLayout>