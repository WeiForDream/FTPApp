<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/id_custom_layout_empty_image" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/empty_error"/>
    
    <TextView 
        android:id="@+id/id_custom_layout_empty_tx"
        android:layout_below="@id/id_custom_layout_empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="目前尚没有任务噢~~"
        android:textColor="@color/my_grey"/>

</RelativeLayout>