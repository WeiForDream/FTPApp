<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/id_listitem_server_file_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_easytransfer_folder" />

    <TextView
        android:id="@+id/id_listitem_server_file_name"
        android:layout_alignTop="@id/id_listitem_server_file_image"
        android:layout_toRightOf="@id/id_listitem_server_file_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件夹"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/id_listitem_server_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/id_listitem_server_file_name"
        android:layout_toRightOf="@id/id_listitem_server_file_image"
        android:layout_marginTop="8dp"
        android:text="20M"
        android:textColor="@color/gray" />

</RelativeLayout>